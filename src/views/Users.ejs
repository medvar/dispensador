<% title="User" %>
    <% include partials/header %>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="row col-10 m-1 p-2" style="background: white; border-radius:7%;">
                    <a href="/home" class="col-3 btn btn-outline-primary">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                    <h3 class="col-8" style="color: steelblue;">Usuarios</h3>
                </div>

            </div>
            <div class="row d-flex justify-content-center">

                <%let cont=1; users_.forEach(function (user){%>
                    <div class="element-card col-5">
                        <div class="front-facing">
                            <span class="abr"> <%=user.user%></span>
                            <p class="title">
                                <%=user.name%>
                            </p>
                            <span class="atomic-number"><%=cont++%></span>
                            <span class="atomic-mass"><%=user.email%></span>
                        </div>
                        <div class="back-facing">
                            <span class="Opcion">
                                Opciones
                            </span>
                            <a href="/user/<%=user.id%>"> <button type="button" class="m-1 btn btn-lg btn-outline-danger">Modificar</button></a>
                            <a href="/historydrinks/<%=user.id%>"> <button type="button" class="m-1 btn btn-lg btn-outline-info">Historial de pedidos</button></a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <script src="/js/home.js"></script>
        <% include partials/footer %>