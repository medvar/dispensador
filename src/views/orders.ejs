<% title="Ordenes" %>
    <% include partials/header %>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="row col-10 m-1 p-2" style="background: white; border-radius:7%;">
                    <a href="/home" class="col-3 btn btn-outline-primary">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                    <h3 class="col-8" style="color: steelblue;">Ordenes</h3>
                </div>

            </div>
            <div class="row d-flex justify-content-center">

                <%let cont=1; orders_.forEach(function (order){%>
                    <div class="element-card col-5">
                        <div class="front-facing">
                       <i class="fas fa-wine-glass abr"></i>
                            <span class="atomic-number"><%=order.date%></span>
                            <span class="atomic-mass"><%=order.state%></span>
                        </div>
                        <div class="back-facing">
                            <span class="Opcion">
                                Opciones
                            </span>
                            <a href="/takeorder/<%=order.id%>"> <button type="button" class="m-1 btn btn-lg btn-outline-info">Ver orden</button></a>
 <form action="/ordercancel/<%=order.id%>" method="delete">
                            <input type="submit" class="m-1 btn btn-lg btn-outline-danger" value='Cancelar orden'></input>
</form>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <script src="/js/home.js"></script>
        <% include partials/footer %>
