<% title="Orders" %>
    <% include partials/header %>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="row col-10 m-1 p-2" style="background: white; border-radius:7%;">
                    <a href="/home" class="col-3 btn btn-outline-primary">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                    <h3 class="col-8" style="color: steelblue;">Ordenes</h3>
                </div>

            </div>
            <div class="row d-flex justify-content-center">

                <%let cont=1; orders_.forEach(function (order){%>
                    <div class="element-card col-5">
                        <div class="front-facing">
                            <span class="abr"> <%=order.user.name%></span>
                            <p class="title">
                                <%=order.drink.name%>
                            </p>
                            <span class="atomic-number"><%=order.date%></span>
                            <span class="atomic-mass"><%=order.state%></span>
                        </div>
                        <div class="back-facing">
                            <span class="Opcion">
                                Opciones
                            </span>
                            <a href="/order/<%=order.id%>"> <button type="button" class="m-1 btn btn-lg btn-outline-info">Ver orden</button></a>
                            <input type="button" onclick="cancelOrder('<%=order.id%>')" class="m-1 btn btn-lg btn-outline-danger">Cancelar orden</input>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <script src="/js/home.js"></script>
        <% include partials/footer %>