<% title="Order" %>
    <% include partials/header %>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <form action="/order<%=action%>" method="post">
                    <div class="card card-body" id=getOrder>
                        <div class="row col-12">
                            <a href="/orders" class="mb-2 col-3 btn btn-outline-primary">
                                <i class="fa fa-arrow-left fa-lg" aria-hidden="true"></i></a>
                            <h3 class="col-8" style="color: steelblue; text-align: center;">Orden</h3>
                        </div>
                        <%if(!drink){%>
                            <input type="button" class="btn btn-outline-success" value="Elegir Bebida" onclick="search()">
                            <%}%>
                                <div class="form-group col-12">
<label for="drink">Bebida</label>
<input type='text' class="form-control hidden" name='drink' id="iddrink" readonly required value=''>
                                    <input type="text" class="form-control" name='drinkname' readonly id="bebida" placeholder="Bebida" required value='<%=drink%>'>
                                </div>
                                <div class="form-group col-12">
                                    <label for="user">Usuario</label>
                                    <input type="text" name="user" class="form-control" id="user" placeholder="Usuario" required readonly value="<%=user%>">
                                    
                                </div>
                                <div class="form-group col-12">
                                    <label for="state">estado</label>
                                    <input type="text" name="state" class="form-control" id="state" readonly placeholder="Estado" required value="<%=state%>">
                                </div>
                                <div class="form-group col-12">
                                    <label for="date">Fecha</label>
                                    <input type="text" name="date" readonly class="form-control" id="date" placeholder="Fecha" required value="<%= date%>">
                                </div>
                                <% if(!drink) { %>
                                    <input type="submit" class="btn btn-outline-success" value="Aceptar">
                                    <% } %>
                    </div>
                </form>
            </div>
        </div>
        <div class="row hidden"  id=drinks>
                        <%let cont=1; drinks_.forEach(function (drink){%>
                            <div class="element-card col-5">
                                <div class="front-facing">
                                <i class="fas fa-cocktail abr"></i>
                                <p class="title" style="font-size: 14px">
                                <%=drink.name%>
                            </p>
                                    <i class="fa fa-angle-double-right atomic-number" aria-hidden="true"></i>
                                    <span class="atomic-mass"><%=cont++%></span>
                                </div>
                                <div class="back-facing">
                                    <span class="Opcion">
                                        Ingredientes
                                    </span>
                                    <div class="row"><span>Ingrediente 1 : </span>
                                        <%=drink.ingre1%>
                                    </div>
                                    <div class="row"><span>Ingrediente 2 : </span>
                                        <%=drink.ingre2%>
                                    </div>
                                    <div class="row"><span>Ingrediente 3 : </span>
                                        <%=drink.ingre3%>
                                    </div>
                                    <input type="button" class="m-1 btn btn-lg btn-outline-success" onclick="elegir('<%=drink.id%>','<%=drink.name%>');" value='Elegir'></input>
                                </div>
                            </div>
                            <% }) %>
                            </div>
        </div>
        <script src="/js/home.js"></script>
        <script src="/js/order.js"></script>
        <% include partials/footer %>
