<% title="Drinks" %>
    <% include partials/header %>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="row col-10 m-1 p-2" style="background: white; border-radius:7%;">
                    <a href="/home" class="col-3 btn btn-outline-primary">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                    <h3 class="col-8" style="color: steelblue;">Bebidas</h3>
                </div>

            </div>
            <div class="row d-flex justify-content-center">

                <%let cont=1; drinks_.forEach(function (drink){%>
                    <div class="element-card col-5">
                        <div class="front-facing">
                            <span class="abr"> <%=drink.name%></span>
                            <i class="fa fa-angle-double-right atomic-number" aria-hidden="true"></i>
                            <span class="atomic-mass"><%=cont++%></span>
                        </div>
                        <div class="back-facing">
                            <span class="Opcion">
                                Opciones
                            </span>
                            <a href="/orderget/<%=drink.id%>"> <button type="button" class="m-1 btn btn-lg btn-outline-success">Pedir</button></a>
                            <a href="/drink/<%=drink.id%>"> <button type="button" class="m-1 btn btn-lg btn-outline-warning">Modificar</button></a>
                            <a href="/historydrink/<%=drink.id%>"> <button type="button" class="m-1 btn btn-lg btn-outline-info">Historial</button></a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <script src="/js/home.js"></script>
        <% include partials/footer %>